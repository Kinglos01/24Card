<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="350.0" prefWidth="520.0" spacing="20.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example._24card.twentyfourCardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <HBox prefHeight="200.0" prefWidth="200.0">
      <children>
         <Button fx:id="findSolution" mnemonicParsing="false" onAction="#onFindSolutionButtonClick" text="Find Solution" />
         <TextField prefHeight="25.0" prefWidth="287.0" />
         <Button fx:id="refresh" mnemonicParsing="false" onAction="#onRefreshButtonClick" text="Refresh" />
      </children>
   </HBox>

    <Label fx:id="welcomeText" />
   <HBox prefHeight="163.0" prefWidth="480.0">
      <children>
         <VBox prefHeight="158.0" prefWidth="125.0">
            <children>
               <ImageView fx:id="card1View" fitHeight="150.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
            </children>
         </VBox>
         <VBox prefHeight="158.0" prefWidth="125.0">
            <children>
               <ImageView fx:id="card2View" fitHeight="150.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
            </children>
         </VBox>
         <VBox prefHeight="158.0" prefWidth="125.0">
            <children>
               <ImageView fx:id="card3View" fitHeight="150.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
            </children>
         </VBox>
         <VBox prefHeight="158.0" prefWidth="125.0">
            <children>
               <ImageView fx:id="card4View" fitHeight="150.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true" />
            </children>
         </VBox>
      </children>
   </HBox>
   <Label fx:id="winnerLabel" text="Good Luck!" />
   <HBox prefHeight="200.0" prefWidth="200.0">
      <children>
         <Label prefHeight="20.0" prefWidth="150.0" text="Enter an expression :" />
         <TextField fx:id="equationText" prefWidth="280.0" />
          <Button fx:id="verify" onAction="#onVerifyButtonClick" text="Verify" />
      </children>
   </HBox>
</VBox>
